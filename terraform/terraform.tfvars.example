# Copy this file to terraform.tfvars and update the values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "php-webapp"
environment  = "dev"

# EC2 Configuration
instance_type   = "t3.micro"
key_pair_name   = "your-ec2-key-pair"  # Create this key pair in AWS Console first

# RDS Configuration
db_instance_class = "db.t3.micro"
db_name          = "webapp_db"
db_username      = "admin"
db_password      = "MySecurePassword123!"  # Change this to a secure password

# GitHub Configuration (for CodePipeline)
github_repo   = "your-username/php-webapp"
github_branch = "main"

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this to your IP for better security